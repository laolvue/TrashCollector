@model IEnumerable<TrashCollector.Models.EmployeeRouter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Week.StartingWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip.ZipId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Week.StartingWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip.ZipId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RouteId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RouteId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RouteId })
            </td>
        </tr>
    }

</table>
